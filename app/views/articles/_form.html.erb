<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :headline %><br>
    <%= f.text_field :headline %>
  </div>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, [['Business'],['Art & Design'],['Entertainment'],['Sports'],['Politics'],['Literature'],['Fashion & Style'],['Technology'],['Music'],['Academia'],['Leisure']], :placeholder => "Select a category" %>
  </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label "Display Image" %> <br />
      <%= f.check_box :imgoption %> <br />
    </div>

    <div class="field">
      <%= f.label "Lead Story" %> <br />
      <%= f.check_box :lead %> <br />
    </div>

     <div class="field">
      <%= f.label "Red Text" %> <br />
      <%= f.check_box :red %> <br />
    </div>

    <div class="field">
      <%= f.label "Italicize Text" %> <br />
      <%= f.check_box :italicize %> <br />
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
