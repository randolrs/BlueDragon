<div class = "top-story">

	<%if @leadarticle.imgoption%>
		<%= image_tag @leadarticle.image, class: "article-image-lead"%> <br>
		<%=link_to @leadarticle.headline.upcase, @leadarticle.url%>
	<%end%>
</div>

<div class = "brand-top">

	<h1><i>Shane Report</i></h1>

</div>

<div class="home-column">
	<div class = "article-content">
		<table class ="article-index-table">

		  <tbody>
		    <% @articles1.each do |article| %>
		      <tr data-link="<%=article.url%>", class="article-index-row">
		        <td class="article-index-data">
		        	<%if article.imgoption%><%= image_tag article.image, class: "article-image-small"%><%end%>
		        	<br>
		        	<b><%=link_to article.headline, article.url%></b>
		    	</td>
		      </tr>
		    <% end %>

		  </tbody>

		</table>
	</div>
	<div class = "columnist-content">

		<table class ="article-index-table">

		  <tbody>
		    <% @columnists1.each do |columnist| %>
		      <tr data-link="<%=columnist.url%>", class="article-index-row">
		        <td class="article-index-data">
		        	<b><%=link_to columnist.name, columnist.url%></b>
		    	</td>
		      </tr>
		    <% end %>

		  </tbody>

		</table>
		
	</div>
</div>

